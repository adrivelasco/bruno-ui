{
  "name": "bruno-ui",
  "version": "0.2.4",
  "description": "Bruno UI Kit",
  "module": "dist/esm/index.js",
  "main": "dist/index.js",
  "types": "dist/types/components.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "stencil build",
    "dev": "stencil build --dev --watch --serve",
    "deploy": "npm run build && np",
    "serve": "stencil-dev-server",
    "start": "npm run dev",
    "test": "jest --runInBand",
    "test.coverage": "jest --coverage --runInBand",
    "test.watch": "jest --runInBand --watch"
  },
  "devDependencies": {
    "@stencil/core": "^0.11.3",
    "@stencil/sass": "0.1.0",
    "@types/jest": "^23.1.0",
    "jest": "^23.1.0",
    "np": "^2.16.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sergiubutnarasu/bruno-ui.git"
  },
  "author": "Sergiu Butnarasu",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sergiubutnarasu/bruno-ui"
  },
  "homepage": "http://bruno.butnarasu.ro/",
  "keywords": [
    "web components",
    "components",
    "stencil",
    "bruno",
    "ui",
    "ui kit"
  ],
  "jest": {
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/node_modules/@stencil/core/testing/jest.preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(tsx?|jsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json",
      "jsx"
    ]
  }
}
